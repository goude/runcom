# aliases to protect against mistakes (force interactive mode)
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# basic command customization aliases
alias df='df -h'

# git aliases
alias gs='git status'
alias gca='git commit -a'
alias gp='git push'
alias gpl='git pull'
alias gpa='git push --tags && git push'
alias ga='git add'
alias gd='git icdiff'
#alias gl="git log --pretty=format:'%C(yellow)%h|%Cred%ad|%Cblue%an|%Cgreen%d %Creset%s' --date=short | column -ts'|' | less -r"
alias gl='git log --oneline --decorate --all --graph'

# homeshick aliases
alias ho='homeshick'
alias hocd='homeshick cd'

# directory navigation shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# short form aliases
alias a='ansible'
alias d='docker'
alias f='fzf'
alias ft='fzf-tmux'
alias g='git'
alias h='history'
alias s='ssh'
alias t='topydo ls'
alias v='\vim'

# python and jupyter aliases
alias jc='jupyter-console'
alias pan='hocd runcom/setup/rcpy/python3 && pipenv shell'
alias pad='pyenv deactivate'
alias pir='pipenv run'
alias pis='pipenv shell'

# misc aliases
alias clp='tmux split-window && exit'
alias ta='tmux attach || tmux new'
alias druncom='cd && source bin/start-runcom-docker'
alias mrs='mr --minimal status'
alias serve-directory='python3 -m http.server'
alias ssh-vagrant='ssh -A -p 2222 vagrant@localhost'
alias pbcopy='xsel --input'
alias pbpaste='xsel --output'
alias tldr='tldr -t base16'
