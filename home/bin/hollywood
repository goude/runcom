#!/bin/bash

while IFS= read -r line; do
    length="${#line}"
    bol=1
    for (( offset = 0 ; offset < length ; offset++ )); do
        char="${line:offset:1}"
        printf '%s' "$char"
        if (( bol )) && [[ "$char" == " " ]]; then
            continue
        fi
        bol=0
        sleep 0.015
    done

    if (( length == 0 )); then
        sleep 0.$(( RANDOM % 3 + 0 ))
    else
        sleep 0.$(( RANDOM % 3 + 0 ))
    fi

    printf '\n'
done
